@model IEnumerable<DotNetMiniProject.Models.Field>

@{
    ViewData["Title"] = "AllFields";
}

<h1>AllFields</h1>

<hr />

<button class="btn btn-secondary ">
    <a class="addBtn text-decoration-none text-white" asp-controller="Admin" asp-action="Index">Add Customer +</a>
</button>

<button class="btn btn-secondary ">
    <a class="addBtn text-decoration-none text-white" asp-controller="Admin" asp-action="AddUser">Add Customer +</a>
</button>


<button class="btn btn-primary">
    <a class="addBtn text-decoration-none text-black" asp-controller="Home">Logout</a>
</button>

<button class="btn btn-primary">
    <a class="addBtn text-decoration-none text-black" asp-controller="Admin" asp-action="AllFields">Stream</a>
</button>


<hr />

<p>
    <a asp-controller="Admin" asp-action="AddField">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImgName)
            </td>
            <td>
                <a asp-action="UpdateField" asp-route-id="@item.Id">Edit</a> |
                
                <a asp-action="DeleteField" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
